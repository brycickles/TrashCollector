@model IEnumerable<MyTrashCollector.Models.Customer>

@{
    ViewBag.Title = "Customer Details";
}

<h2>Customer Details Page</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StreetAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuspendStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SuspendEnd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExtraPickupDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickupDay)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StreetAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Zip)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SuspendStart)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SuspendEnd)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExtraPickupDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PickupDay)
    </td>
    <td>
        @Html.ActionLink("Edit Weekly Pickup Day", "EditPickupDay", new { id = item.Id }) 
        <br />
        @Html.ActionLink("Edit Suspend Dates", "EditSuspendDates", new { id = item.Id })         
    </td>
</tr>
}

</table>

<h2>Customer Balance</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        @foreach (var item in Model)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.ActionLink("Balance Breakdown", "BalanceBreakdown", new { id = item.Id })
            </td>
        }

    </tr>    
</table>